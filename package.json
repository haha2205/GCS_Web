{
  "name": "apollo-gcs-web",
  "version": "1.0.0",
  "description": "Apollo Dreamview 风格的无人机地面站 Web 版",
  "main": "src-electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:electron\" \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:electron": "electron src-electron/main.js",
    "dev:frontend": "cd src-frontend && npm run dev",
    "dev:backend": "cd src-python && uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "build:frontend": "cd src-frontend && npm run build",
    "build": "npm run build:frontend && electron-builder",
    "build:win": "npm run build:frontend && electron-builder --win",
    "build:mac": "npm run build:frontend && electron-builder --mac",
    "build:linux": "npm run build:frontend && electron-builder --linux",
    "lint": "cd src-frontend && npm run lint",
    "postinstall": "cd src-frontend && npm install && cd ../src-python && pip install -r requirements.txt"
  },
  "keywords": [
    "drone",
    "gcs",
    "apollo",
    "electron",
    "vue3",
    "python"
  ],
  "author": "Tianjin University",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.tju.apollo.gcs",
    "productName": "Apollo GCS",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src-electron/**/*",
      "src-frontend/dist/**/*",
      "src-python/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "src-electron/assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "src-electron/assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "src-electron/assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    }
  },
  "dependencies": {
    "electron-serve": "^1.1.0"
  }
}